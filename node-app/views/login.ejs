
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
            <% include  ./partials/messages %>

      <div class="col"><center>
    <!--<div href="/login/facebook" class="fb-login-button" data-size="large" data-button-type="login_with" data-auto-logout-link="false" data-use-continue-as="true"></div>-->
        <a href="/login/facebook">Log In with Facebook</a>
		<a href="#" class="fa fa-twitter"></a>
        <a href="#" class="fa fa-instagram"></a>

        </center>

        </br></br>
      </div>

      <div class="col">
          <center><p><h3>Or sign in manually</h3></p></center>
        </div>

      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>